# Telegram Bot Configuration
# Скопируйте в .env и заполните значения

# Токен бота (получить у @BotFather)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Telegram IDs администраторов (разделены запятой)
# Пример: 123456789,987654321,555555555
ADMIN_IDS=YOUR_TELEGRAM_IDS_HERE

# Путь к docker-compose.yml
DOCKER_COMPOSE_PATH=/home/user/docker-compose.yml

# Пути к логам
FAIL2BAN_LOG_PATH=/var/log/fail2ban.log
AUTH_LOG_PATH=/var/log/auth.log
SYSLOG_PATH=/var/log/syslog

# Пороги срабатываний для уведомлений
FAIL2BAN_THRESHOLD=5
SSH_FAILED_THRESHOLD=10
PORT_SCAN_THRESHOLD=20
